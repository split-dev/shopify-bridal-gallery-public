{{ 'image-gallery.out.css' | asset_url | stylesheet_tag }}


{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}

{%- liquid
    if section.settings.image_lazy
        assign imageLoading = 'lazy'
    else
        assign imageLoading = ''
    endif
-%}

<section class="image-gallery__section section-{{ section.id }}-padding page-width">
  <h2 class="image-gallery__header h2">{{ section.settings.header }}</h2>

  <div class="image-gallery__content">
    {% assign image_class = 'image-gallery__image' %}

    <div class="image-gallery__column image-gallery__column-1">
      <div class="image-gallery__image-wrap image-gallery__image-wrap-1">
        {% if section.settings.image_1 != blank %}
          {% render 'simple-image', image: section.settings.image_1, imageLoading: imageLoading, imageClasses: image_class%}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="image-gallery__image-wrap image-gallery__image-wrap-2">
        {% if section.settings.image_2 != blank %}
          {% render 'simple-image', image: section.settings.image_2, imageLoading: imageLoading, imageClasses: image_class%}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
    <div class="image-gallery__column image-gallery__column-2">
      <div class="image-gallery__image-wrap">
        {% if section.settings.image_3 != blank %}
          {% render 'simple-image', image: section.settings.image_3, imageLoading: imageLoading, imageClasses: image_class%}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
    <div class="image-gallery__column image-gallery__column-3">
      <div class="image-gallery__image-wrap image-gallery__image-wrap-1">
        {% if section.settings.image_4 != blank %}
          {% render 'simple-image', image: section.settings.image_4, imageLoading: imageLoading, imageClasses: image_class%}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="image-gallery__image-wrap image-gallery__image-wrap-2">
        {% if section.settings.image_5 != blank %}
          {% render 'simple-image', image: section.settings.image_5, imageLoading: imageLoading, imageClasses: image_class%}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image Gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Section header",
      "default": "Take A Look Inside The Gallery"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3 (large)"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    },
    {
      "type": "checkbox",
      "id": "image_lazy",
      "label": "Image lazy loading",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding top desktop",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom desktop",
      "default": 148
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Image Gallery"
    }
  ]
}
{% endschema %}