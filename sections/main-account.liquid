{{ 'customer.css' | asset_url | stylesheet_tag }}
{{ 'customer-account.out.css' | asset_url | stylesheet_tag }}
{{ 'appointment-form.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  body {
    position: relative;
  }

  .loading-overlay{
    top: 50%;
    left: 50%;
    transform: scale(2.5);
  }
{%- endstyle -%}

<div class="customer account section-{{ section.id }}-padding">
  <div class="customer__wrapper d-flex">
    <div class="customer__sidebar">
      <h1 class="customer__title h4 text-text">{{ 'customer.account.title' | t }}</h1>
      <a class="text-15px" href="{{ routes.account_logout_url }}">
        {{ 'customer.log_out' | t }}
      </a>
      <div class="customer__nav-wrapper">
        <div>
          <a
            id="link-booking"
            class="customer__account-tabs-link title-collection-item tablinks active"
            onclick="openTab(event, 'booking')"
            href="{{ routes.account_url }}#booking"
            >Appointments
          </a>
        </div>
        <div>
          <a
            id="link-order"
            class="customer__account-tabs-link title-collection-item tablinks"
            onclick="openTab(event, 'order')"
            href="{{ routes.account_url }}#order"
          >
            {{ 'customer.orders.title' | t }}
          </a>
        </div>
        <div>
          <a class="title-collection-item" href="{{ routes.account_addresses_url }}">
            {{ 'customer.account.details' | t }}
          </a>
        </div>
        <div>
          <a class="title-collection-item" href="/pages/swym-wishlist"> My Wishlist </a>
        </div>
        {% if customer.id == 7207032553745 %}
          <div>
            <a
              id="link-product"
              class="customer__account-tabs-link title-collection-item tablinks"
              onclick="openTab(event, 'product')"
              href="{{ routes.account_url }}#product"
              >synchronisation of product
            </a>
          </div>
          <div>
            <a
              id="link-collection"
              class="customer__account-tabs-link title-collection-item tablinks"
              onclick="openTab(event, 'collection')"
              href="{{ routes.account_url }}#collection"
            >
              synchronisation of collection
            </a>
          </div>
          <div>
            <a
              id="link-collections"
              class="customer__account-tabs-link title-collection-item tablinks"
              onclick="openTab(event, 'collections')"
              href="{{ routes.account_url }}#collections"
            >
              synchronisation of collections
            </a>
          </div>
        {% endif %}
      </div>
    </div>
    <div class="customer__tabs"></div>
    <div id="booking" class="tabcontent">
      <h3 class="customer__addresses-title text-text h2">Appointments</h3>

      <div class="customer__booking-wrapper">
        {% if customer.metafields.custom.book.value.bookings != blank %}
          <div>
            <h4 class="title-collection-item text-text">Upcoming events</h4>
            <div class="customer__booking-table">
              <div class="customer__booking-table-head w-100 d-flex">
                <div class="title-small-upper">
                  <p class="text-dark-grey">Booking ref</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Booking Date</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Appointment Type</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Appointment Date</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Amount</p>
                </div>
              </div>
              {%- for booking in customer.metafields.custom.book.value.bookings -%}
                {%- unless booking.status == 'Canceled' or booking.status == 'Completed' -%}
                  <div class="customer__booking-table-line w-100 d-flex">
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Booking ref</span>
                      <p class="booking--id">{{ booking.id }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Booking Date</span>
                      {% assign appointmentDateInSeconds = booking.appointment_date | divided_by: 1000 %}
                      <p>{{ appointmentDateInSeconds | date: '%b %d, %Y' }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Appointment Type</span>
                      <p>{{ booking.type }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Appointment Date</span>
                      {% assign appointmentDateInSeconds = booking.event_date | divided_by: 1000 %}
                      {%- if appointmentDateInSeconds != 0 -%}
                        <p>
                          {{ appointmentDateInSeconds | date: '%b %d, %Y' }}
                        </p>
                      {%- else -%}
                        -
                      {%- endif -%}
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Amount</span>
                      <p>{{ booking.amount }}</p>
                    </div>
                    <div class="customer__booking-table-edit">
                      <p data-form-trigger="{{ booking.time_slot_type }}" data-editEventButton>Edit</p>
                    </div>
                  </div>
                {%- endunless -%}
              {%- endfor -%}
            </div>
          </div>
          <div>
            <h4 class="title-collection-item text-text">Past events</h4>
            <div class="customer__booking-table">
              <div class="customer__booking-table-head w-100 d-flex">
                <div class="title-small-upper">
                  <p class="text-dark-grey">Booking ref</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Booking Date</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Appointment Type</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Appointment Date</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Amount</p>
                </div>
                <div class="title-small-upper">
                  <p class="text-dark-grey">Status</p>
                </div>
              </div>
              {%- for booking in customer.metafields.custom.book.value.bookings -%}
                {%- if booking.status == 'Canceled' or booking.status == 'Completed' -%}
                  <div class="customer__booking-table-line w-100 d-flex">
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Booking ref</span>
                      <p>{{ booking.id }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Booking Date</span>
                      {% assign appointmentDateInSeconds = booking.appointment_date | divided_by: 1000 %}
                      <p>{{ appointmentDateInSeconds | date: '%b %d, %Y' }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Appointment Type</span>
                      <p>{{ booking.type }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Appointment Date</span>
                      {%- assign appointmentDate = booking.event_date | divided_by: 1000 -%}
                      <p>{{ appointmentDate | date: '%b %d, %Y' }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Amount</span>
                      <p>{{ booking.amount }}</p>
                    </div>
                    <div class="d-flex">
                      <span class="title-small-upper text-dark-grey">Status</span>
                      <p>{{ booking.status }}</p>
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        {% else %}
          <p>You haven't placed any bookings yet.</p>
        {% endif %}
      </div>
    </div>
    <div id="order" class="tabcontent">
      <div>
        <h1 class="customer__addresses-title text-text h2">{{ 'customer.orders.title' | t }}</h1>

        {% paginate customer.orders by 20 %}
          {%- if customer.orders.size > 0 -%}
            {%- for order in customer.orders -%}
              <div class="customer__order-item">
                <div>
                  <div class="customer__order-title d-flex">
                    <h4 class="text-text title-collection-item">{{ 'customer.order.title' | t: name: order.name }}</h4>
                    <p class="title-collection-item text-text">{{ order.fulfillment_status_label }}</p>
                  </div>

                  {%- assign order_date = order.created_at | time_tag: format: 'date_at_time' -%}
                  <p class="customer__order-date p-small text-text">
                    {{ 'customer.order.date_html' | t: date: order_date }}
                  </p>
                  {%- if order.cancelled -%}
                    {%- assign cancelled_at = order.cancelled_at | time_tag: format: 'date_at_time' -%}
                    <p class="customer__order-date p-small text-text">
                      {{ 'customer.order.cancelled_html' | t: date: cancelled_at }}
                    </p>
                    <p class="customer__order-date p-small text-text">
                      {{ 'customer.order.cancelled_reason' | t: reason: order.cancel_reason_label }}
                    </p>
                  {%- endif -%}

                  <div class="customer__order-table">
                    <div class="customer__order-table-head d-flex">
                      <div class="title-small-upper">
                        <p class="text-dark-grey" id="ColumnProduct">{{ 'customer.order.product' | t }}</p>
                      </div>
                      <div class="title-small-upper">
                        <p class="text-dark-grey" id="ColumnQuantity">Qty</p>
                      </div>
                      <div class="title-small-upper">
                        <p class="text-dark-grey" id="ColumnTotal">{{ 'customer.order.price' | t }}</p>
                      </div>
                    </div>
                    {%- for line_item in order.line_items -%}
                      <div class="customer__order-table-line d-flex">
                        <div class="d-flex">
                          <div class="customer__order-table-img d-flex">
                            {% if line_item.image %}
                              {{ line_item.image | img_url: '288x420' | img_tag }}
                            {% endif %}
                          </div>
                          <div>
                            <a class="text-15px text-text" href="{{ line_item.url }}">
                              {{- line_item.title | replace: '- Original product', '' -}}
                            </a>
                            <div>
                              {%- for property in line_item.properties -%}
                                {%- assign property_first_char = property.first | slice: 0 -%}
                                {%- if property.last != blank and property_first_char != '_' -%}
                                  <div class="product-option">
                                    <dt class="p-small bold">{{ property.first }}:</dt>
                                    <dd class="p-small text-dark-grey">
                                      {%- if property.last contains '/uploads/' -%}
                                        <a href="{{ property.last }}" class="link" target="_blank">
                                          {{ property.last | split: '/' | last }}
                                        </a>
                                      {%- else -%}
                                        {{ property.last }}
                                      {%- endif -%}
                                    </dd>
                                  </div>
                                {%- endif -%}
                              {%- endfor -%}
                              <div class="product-option customer__order-table-qty">
                                <dt class="p-small bold">Qty:</dt>
                                <dd class="p-small text-dark-grey">&nbsp;{{ line_item.quantity }}</dd>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div>
                          <p class="text-text text-15px">{{ line_item.quantity }}</p>
                        </div>

                        <div>
                          <p class="text-text text-15px">{{ line_item.final_line_price | money }}</p>
                        </div>
                      </div>
                    {%- endfor -%}
                    <div class="customer__order-table-footer">
                      <div class="d-flex justify-content-between" role="row">
                        <p id="RowSubtotal" role="rowheader" scope="row" colspan="4">
                          {{ 'customer.order.subtotal' | t }}
                        </p>
                        <p headers="RowSubtotal" role="cell" data-label="{{ 'customer.order.subtotal' | t }}">
                          {{ order.line_items_subtotal_price | money }}
                        </p>
                      </div>
                      {%- if order.cart_level_discount_applications != blank -%}
                        <div class="d-flex justify-content-between" role="row">
                          {%- for discount_application in order.cart_level_discount_applications -%}
                            <p id="RowDiscount" role="rowheader" scope="row" colspan="4">
                              {{ 'customer.order.discount' | t }}
                              <span class="cart-discount">
                                <svg aria-hidden="true" focusable="false" viewBox="0 0 12 12">
                                  <use href="#icon-discount" />
                                </svg>
                                {{- discount_application.title -}}
                              </span>
                            </p>
                            <p headers="RowDiscount" role="cell" data-label="{{ 'customer.order.discount' | t }}">
                              <div>
                                <span>-{{ discount_application.total_allocated_amount | money }}</span>
                                <span class="cart-discount">
                                  <svg aria-hidden="true" focusable="false" viewBox="0 0 12 12">
                                    <use href="#icon-discount" />
                                  </svg>
                                  {{- discount_application.title -}}
                                </span>
                              </div>
                            </p>
                          {%- endfor -%}
                        </div>
                      {%- endif -%}
                      {%- for shipping_method in order.shipping_methods -%}
                        <div class="d-flex justify-content-between" role="row">
                          <p id="RowShipping" role="rowheader" scope="row" colspan="4">
                            {{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})
                          </p>
                          <p
                            headers="RowShipping"
                            role="cell"
                            data-label="{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})"
                          >
                            {{ shipping_method.price | money }}
                          </p>
                        </div>
                      {%- endfor -%}
                      {%- for tax_line in order.tax_lines -%}
                        <div class="d-flex justify-content-between" role="row">
                          <p id="RowTax" role="rowheader" scope="row" colspan="4">
                            {{ 'customer.order.tax' | t }} ({{ tax_line.title }}
                            {{ tax_line.rate | times: 100 }}%)
                          </p>
                          <p
                            headers="RowTax"
                            role="cell"
                            data-label="{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)"
                          >
                            {{ tax_line.price | money }}
                          </p>
                        </div>
                      {%- endfor -%}
                      {%- if order.total_duties -%}
                        <div class="d-flex justify-content-between" role="row">
                          <p id="RowDuties" role="rowheader" scope="row" colspan="4">
                            {{ 'customer.order.total_duties' | t }}
                          </p>
                          <p headers="RowDuties" role="cell" data-label="{{ 'customer.order.total_duties' | t }}">
                            {{ order.total_duties | money }}
                          </p>
                        </div>
                      {%- endif -%}
                      {%- if order.total_refunded_amount > 0 -%}
                        <div class="d-flex justify-content-between" role="row">
                          <p id="RowTotalRefund" role="rowheader" scope="row" colspan="3">
                            {{ 'customer.order.total_refunded' | t }}
                          </p>
                          <p
                            headers="RowTotalRefund"
                            role="cell"
                            colspan="2"
                            data-label="{{ 'customer.order.total_refunded' | t }}"
                          >
                            -{{ order.total_refunded_amount | money_with_currency }}
                          </p>
                        </div>
                      {%- endif -%}
                      <div class="d-flex justify-content-between" role="row">
                        <p id="RowTotal" role="rowheader" scope="row" colspan="3">{{ 'customer.order.total' | t }}</p>
                        <p headers="RowTotal" role="cell" colspan="2" data-label="{{ 'customer.order.total' | t }}">
                          {{ order.total_net_amount | money_with_currency }}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {%- endfor -%}
          {%- else -%}
            <p>{{ 'customer.orders.none' | t }}</p>
          {%- endif -%}

          {%- if paginate.pages > 1 -%}
            {%- if paginate.parts.size > 0 -%}
              <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
                <ul role="list">
                  {%- if paginate.previous -%}
                    <li>
                      <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                        <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                        </svg>
                      </a>
                    </li>
                  {%- endif -%}

                  {%- for part in paginate.parts -%}
                    <li>
                      {%- if part.is_link -%}
                        <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </a>
                      {%- else -%}
                        {%- if part.title == paginate.current_page -%}
                          <span
                            aria-current="page"
                            aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
                          >
                            {{- part.title -}}
                          </span>
                        {%- else -%}
                          <span>{{ part.title }}</span>
                        {%- endif -%}
                      {%- endif -%}
                    </li>
                  {%- endfor -%}

                  {%- if paginate.next -%}
                    <li>
                      <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                        <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                        </svg>
                      </a>
                    </li>
                  {%- endif -%}
                </ul>
              </nav>
            {%- endif -%}
          {%- endif -%}
        {% endpaginate %}
      </div>
    </div>
    {% if customer.id == settings.admin_id %}
      <div id="product" class="tabcontent">
        <h3 class="customer__addresses-title text-text h2">Synchronisation of product</h3>

        <div class="customer__product-wrapper">
          <form action="" class="custom-form">
            <div class="custom-form__row-full d-flex align-items-end">
              <div class="custom-form__field">
                <label class="custom-form__label title-small-upper text-text mb-3 d-block" for="bridal_{{ form.id }}"
                  >id bridal</label
                >
                <input
                  class="custom-form__input text-text text-15px"
                  type="number"
                  id="bridal_{{ form.id }}"
                  name="bridal[number]"
                  placeholder="00 00 00 00 00 00"
                >
              </div>
              <div class="custom-form__select custom-form__select-wedding">
                <select id="idSelect">
                  <option value="" selected>Create</option>
                  <option value="">Update</option>
                  <option value="">Delete</option>
                </select>
              </div>
            </div>
            <div class="custom-form__button d-flex w-100">
              <button type="submit" data-type="bridal" class="btn btn__primary w-100">Done</button>
