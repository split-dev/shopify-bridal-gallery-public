        <a class="btn btn__primary design-collection__button-desk" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    </div>
    <div class="design-collection__collections">
        <div class="design-collection__primary">
          <div class="design-collection__collection-title title-collection-item">{{ section.settings.collection_primary.title }}</div>
