              class="design-collection__link"
              href="{{ section.settings.collection_primary.url }}"
            >
              {%- if section.settings.image_collection_primary != blank or section.settings.collection_primary.image != blank -%}
                  {% if section.settings.image_collection_primary != blank %}
                    {%- liquid
                      assign image_primary = section.settings.image_collection_primary
                      assign imageWidth = image_primary.width
                      assign imageHeight = imageWidth | divided_by: image_primary.aspect_ratio
                    %}

                    {{ image_primary | image_url: width: 3840 | image_tag:
                    loading: imageLoading,
                    width: imageWidth,
                    height: imageHeight,
                    class: 'design-collection__primary-image',
                    sizes: '100vw',
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}

                  {% else %}

